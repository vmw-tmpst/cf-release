check process uaa
  with pidfile /var/vcap/sys/run/uaa/uaa.pid
  start program "/var/vcap/jobs/uaa/bin/uaa_ctl start"
  stop program "/var/vcap/jobs/uaa/bin/uaa_ctl stop"
  group vcap

check process uaa_router_registrar
  with pidfile /var/vcap/sys/run/uaa/router_registrar.pid
  start program "/var/vcap/jobs/uaa/bin/router_registrar_ctl start"
  stop program "/var/vcap/jobs/uaa/bin/router_registrar_ctl stop"
  group vcap
