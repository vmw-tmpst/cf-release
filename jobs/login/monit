check process login
  with pidfile /var/vcap/sys/run/login/login.pid
  start program "/var/vcap/jobs/login/bin/login_ctl start"
  stop program "/var/vcap/jobs/login/bin/login_ctl stop"
  group vcap

check process login_router_registrar
  with pidfile /var/vcap/sys/run/login/router_registrar.pid
  start program "/var/vcap/jobs/login/bin/router_registrar_ctl start"
  stop program "/var/vcap/jobs/login/bin/router_registrar_ctl stop"
  group vcap
