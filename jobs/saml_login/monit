check process saml_login
  with pidfile /var/vcap/sys/run/saml_login/saml_login.pid
  start program "/var/vcap/jobs/saml_login/bin/saml_login_ctl start"
  stop program "/var/vcap/jobs/saml_login/bin/saml_login_ctl stop"
  group vcap

check process router_registrar
  with pidfile /var/vcap/sys/run/router_registrar/router_registrar.pid
  start program "/var/vcap/jobs/saml_login/bin/router_registrar_ctl start"
  stop program "/var/vcap/jobs/saml_login/bin/router_registrar_ctl stop"
  group vcap
