---
logging:
  file: /var/vcap/sys/log/router_registrar/router_registrar.log
  <% if_p("syslog_aggregator") do |_| %>
  syslog: vcap.saml_login_router_registrar
  <% end %>
  level: info
mbus: <%= "nats://#{p("nats.user")}:#{p("nats.password")}@#{p("nats.address")}:#{p("nats.port")}" %>
uri:
  - login.<%= properties.domain %>
host: <%= spec.networks.send(properties.networks.apps).ip %>
index: <%= spec.index %>
port: <%= p("saml_login.port") %>
tags:
  component: saml_login
varz:
  file: /var/vcap/jobs/saml_login/config/varz.yml
